{
	"compilerOptions": {
		"outDir":"./dist/",
		"noImplicitAny": true,
		"sourceMap": true,
		"module":"commonjs",
		"target": "es2020",
		"baseUrl":"src",
		"paths":{
			"@/*":["*"]
		},
		"allowSyntheticDefaultImports": true,
		"declaration": true,
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}